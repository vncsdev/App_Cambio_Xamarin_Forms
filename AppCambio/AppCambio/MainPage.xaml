<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppCambio.MainPage"
             BackgroundColor="#CCC" Padding="10">

    <StackLayout Padding="25" 
                 Orientation="Vertical"
                 BackgroundColor="White"
                 VerticalOptions="Center">
        
        <Label Text="Qual é o valor em Reais?" 
               HorizontalTextAlignment="Center"
               FontSize="Title"/>

        <Label Text="Qual é o valor em Dólares?" />
        <Entry x:Name="txt_dolares"
               Keyboard="Numeric"
               Placeholder="Valor em USD"/>

        <Label Text="Qual é a cotação do dia?" />
        <Entry x:Name="txt_cotacao" 
               Keyboard="Numeric"
               Placeholder="Valor em R$"/>

        <Button Text="Calcular" Clicked="Button_Clicked" />
        <Label x:Name="lblResultado"
               FontSize="Title" 
               HorizontalTextAlignment="Center"
               TextColor="red"/>



    </StackLayout>

</ContentPage>
